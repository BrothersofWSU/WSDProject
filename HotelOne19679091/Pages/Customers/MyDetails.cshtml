@page
@model HotelOne19679091.Pages.Customers.MyDetailsModel
@{
    @using Microsoft.AspNetCore.Identity
    @inject UserManager<IdentityUser> UserManager
    ViewData["Title"] = "MyDetails";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}



<h2>My Details</h2>

@if ((string)ViewData["ExistInDB"] == "true")
{
    <h4> Welcome, @UserManager.GetUserName(User)! Edit your details below: </h4>
}
else
{
    <h4>Welcome,  @UserManager.GetUserName(User)! You should enter your details before browsing other links</h4>
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Myself.fname" class="control-label"></label>
                <input asp-for="Myself.fname" class="form-control" />
                <span asp-validation-for="Myself.fname" class="test-ddanger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Myself.lname" class="control-label"></label>
                <input asp-for="Myself.lname" class="form-control" />
                <span asp-validation-for="Myself.lname" class="test-ddanger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Myself.postCode" class="control-label"></label>
                <input asp-for="Myself.postCode" class="form-control" />
                <span asp-validation-for="Myself.postCode" class="test-ddanger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>



@if (ViewData["SuccessDB"] != null)
{
    <hr />
    <h5>Thank you. You have successfully udpated your details with your name <strong>@Model.Myself.fname @Model.Myself.lname</strong> and postcode: <strong>@Model.Myself.postCode</strong></h5>
}
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}